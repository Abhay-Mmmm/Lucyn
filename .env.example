# ===========================================
# LUCYN ENVIRONMENT VARIABLES
# ===========================================
# Copy this file to .env and fill in your values

# -------------------------------------------
# Supabase Configuration
# -------------------------------------------
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Database (direct connection for Prisma)
DATABASE_URL=postgresql://postgres:your-password@db.your-project.supabase.co:5432/postgres

# -------------------------------------------
# Redis (Upstash)
# -------------------------------------------
# REST API (for @upstash/redis HTTP client - used by web app)
UPSTASH_REDIS_REST_URL=https://your-instance.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-upstash-token

# Redis URL (for ioredis/BullMQ - used by worker)
# Get from Upstash Console → Your Database → Details → "Redis URL"
# Format: rediss://default:PASSWORD@HOST:PORT
REDIS_URL=rediss://default:your-password@your-instance.upstash.io:6379

# -------------------------------------------
# GitHub App
# -------------------------------------------
GITHUB_APP_ID=your-github-app-id
GITHUB_APP_PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----\n...\n-----END RSA PRIVATE KEY-----"
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_WEBHOOK_SECRET=your-webhook-secret

# -------------------------------------------
# Discord App
# -------------------------------------------
DISCORD_CLIENT_ID=your-discord-client-id
DISCORD_CLIENT_SECRET=your-discord-client-secret
DISCORD_BOT_TOKEN=your-discord-bot-token
DISCORD_PUBLIC_KEY=your-discord-public-key
DISCORD_GUILD_ID=your-discord-guild-id

# -------------------------------------------
# OpenAI
# -------------------------------------------
OPENAI_API_KEY=sk-your-openai-api-key

# -------------------------------------------
# Application
# -------------------------------------------
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# -------------------------------------------
# Sentry (Error Tracking - Optional)
# -------------------------------------------
SENTRY_DSN=your-sentry-dsn
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn
