# ===========================================
# LUCYN ENVIRONMENT VARIABLES
# ===========================================
# Copy this file to .env and fill in your values

# -------------------------------------------
# Supabase Configuration
# -------------------------------------------
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Database (direct connection for Prisma - use direct URL, not pooler, for migrations)
DATABASE_URL=postgres://postgres:your-password@db.your-project.supabase.co:5432/postgres

# -------------------------------------------
# Redis (Upstash)
# -------------------------------------------
# REST API (for @upstash/redis HTTP client)
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-upstash-token

# Redis URL (for ioredis/BullMQ - used by worker)
REDIS_URL=rediss://default:your-token@your-redis.upstash.io:6379

# -------------------------------------------
# GitHub App
# -------------------------------------------
GITHUB_APP_ID=your-app-id
GITHUB_APP_PRIVATE_KEY=your-private-key
GITHUB_CLIENT_ID=your-client-id
GITHUB_CLIENT_SECRET=your-client-secret
GITHUB_WEBHOOK_SECRET=your-webhook-secret

# -------------------------------------------
# Application
# -------------------------------------------
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# -------------------------------------------
# Discord App
# -------------------------------------------
DISCORD_CLIENT_ID=your-client-id
DISCORD_CLIENT_SECRET=your-client-secret
DISCORD_BOT_TOKEN=your-bot-token
DISCORD_PUBLIC_KEY=your-public-key
DISCORD_GUILD_ID=your-guild-id

# -------------------------------------------
# OpenAI
# -------------------------------------------
OPENAI_API_KEY=sk-your-openai-key

# -------------------------------------------
# Sentry (Error Tracking - Optional)
# -------------------------------------------
SENTRY_DSN=
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_SUPPRESS_GLOBAL_ERROR_HANDLER_FILE_WARNING=1

# -------------------------------------------
# Resend (Transactional Email)
# -------------------------------------------
RESEND_API_KEY=re_your_resend_api_key
EMAIL_FROM=Lucyn <noreply@lucyn.dev>
